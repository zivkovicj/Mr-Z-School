ready = ->
    set_sem_stud_url = (th) ->
        seminar_student_id = $(th).attr('seminar_student_id')
        url = '/seminar_students/'+seminar_student_id
            
    $("input:text").focus ->
        $(this).select()
        
    $("input:text").click ->
        $(this).select()
        
    if $('.btn-info').length > 0
        $("#dialog1").dialog
            autoOpen: false
            width: 520
            buttons : 
                Ok: ->
                    $(this).dialog("close")
        
        $('#btn-info1').on "click", ->
            $("#dialog1").dialog("open")
            
        $("#dialog2").dialog
            autoOpen: false
            width: 520
            buttons : 
                Ok: ->
                    $(this).dialog("close")
        
        $('#btn-info2').on "click", ->
            $("#dialog2").dialog("open")    
            
            
    if $('#add-more-button').length > 0
        timesClicked = 1
        $('#add-more-button').on "click", ->
            $(".click-" + timesClicked).fadeIn()
            timesClicked = timesClicked + 1
            if timesClicked == 4
                $('#add-more-button').fadeOut()
            
    if $('.req_option').length > 0
        $('.req_option').on "click", ->
            req_type = $(this).attr("req_type")
            $('.req_option_'+req_type).removeClass("highSingOpt").addClass("lowSingOpt")
            $(this).addClass("highSingOpt")
            req_id = $(this).attr('req_id')
            set_sem_stud_url($(this))
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    seminar_student:
                        req_type: req_type
                        req_id: req_id
                        
    if $('.add_bucks').length > 0
        console.log("Beef")
        url = ""
        seminar_student_id = 0
        com_id = 0
        current_cash = 0
        multiplier = 0
        new_cash = 0
        price = 0
        new_com_quant = 0
        new_items = 0
        
        
        set_market_attributes = (th) ->
            com_id = $(th).attr('commodity_student_id')
            current_cash = parseInt($('#current_cash').text())
            multiplier = parseInt($(th).attr('multiplier'))
    
        item_stash_display = (com_id, multiplier) ->
            current_items = parseInt($('#quantity_'+com_id).text())
            new_items = current_items + multiplier 
            $('#quantity_'+com_id).text(new_items)
            
        button_displays = ->
            if new_cash >= price && new_com_quant > 0
                $('#buy_button_'+com_id).removeClass('currently_hidden')
            else
                $('#buy_button_'+com_id).addClass('currently_hidden')
            
            if new_items > 0
                $('#sell_button_'+com_id).removeClass('currently_hidden')
                $('#use_button_'+com_id).removeClass('currently_hidden')
            else
                $('#sell_button_'+com_id).addClass('currently_hidden')
                $('#use_button_'+com_id).addClass('currently_hidden')
            
    
        $('.add_bucks').on "click", ->
            set_sem_stud_url($(this))
            set_market_attributes($(this))
            if $(this).attr('amount') == "X"
                amount = parseInt($('#buck_spinbox').val())
            else  
                amount = parseInt($(this).attr('amount'))
            new_cash = current_cash + amount
            $('#current_cash').text(new_cash)
            console.log(url)
            console.log(amount)
            console.log(new_cash)
            
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    bucks_to_add: amount
                    
        $('.buy_commode').on "click", ->
            set_sem_stud_url($(this))
            set_market_attributes($(this))
            price = parseInt($('#price_'+com_id).text())
            new_cash = current_cash - (price * multiplier)
            $('#current_cash').text(new_cash)
            
            commodity_quantity = parseInt($('#commodity_quantity_'+com_id).text())
            new_com_quant = commodity_quantity - multiplier
            $('#commodity_quantity_'+com_id).text(new_com_quant)
        
            item_stash_display(com_id, multiplier)
            button_displays()
            
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    commodity_student_id: com_id
                    multiplier: multiplier
                    
                        
        $('.use_commode').on "click", ->
            set_sem_stud_url($(this))
            set_market_attributes($(this))
            item_stash_display(com_id, multiplier)
            new_com_quant = 1
            button_displays()
            
            used_so_far = parseInt($('#used_toward_grade').text())
            $('#used_toward_grade').text(used_so_far + 1)
            
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    commodity_student_id: com_id
                    use: 1
    
    if $('.achievement_change').length > 0
        $('.achievement_change').on "change", ->
            checkpoint_id = $(this).attr('checkpoint_id')
            url = '/checkpoints/'+checkpoint_id
            $('#achievement_text_'+checkpoint_id).text($("option:selected", this).text())
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    checkpoint:
                        achievement: $(this).val()
            
    
    if $('.goal_approval').length > 0
        $('.goal_approval').on "click", ->
            if $(this).text() == "Lock This Goal"
                send_boolean = true
                new_text = "Unlock This Goal"
                $(this).addClass("unlock_button")
            else
                send_boolean = false
                new_text = "Lock This Goal"
                $(this).removeClass("unlock_button")
            gs_id = $(this).attr('gs_id')
            url = '/goal_students/'+gs_id
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    goal_student:
                        approved: send_boolean
            $(this).text(new_text)

    if $('.add_key').length > 0
        key_image = "<img src='<%= asset_path('key.jpg') %>'>"
        
        update_key_holder = (ths, new_keys) ->
            old_keys = parseInt($(ths).children().length)
            current_keys_0 = old_keys + parseInt(new_keys)
            current_keys_1 = Math.min(6, current_keys_0)
            os_id = $(ths).attr('os_id')
            if current_keys_1 == 6
                $('.add_key_2_'+os_id).text("")
                $('.add_key_1_'+os_id).text("")
            else
                $('.add_key_2_'+os_id).text("+2")
                $('.add_key_1_'+os_id).text("+1")
            $('.key_holder_'+os_id).empty()
            for i in [0...current_keys_1] by 1
                $('.key_holder_'+os_id).append(key_image)
    
        $('.key_area').on "click", ->
            os_id = parseInt($(this).attr('os_id'))
            new_keys = $(this).attr('new_keys')
            this_holder = $('.key_holder_'+os_id).first()
            update_key_holder(this_holder, new_keys)
            url = '/objective_students/'+os_id
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    objective_student:
                        new_keys: new_keys
                        
        $('.whole_class_keys').on "click", ->
            obj_id = $(this).attr('obj_id')
            sem_id = $(this).attr('sem_id')
            new_keys = $(this).attr('new_keys')
            url = '/objectives/'+obj_id+'/whole_class_keys'
            $('.sem_'+sem_id).each (index, element) =>
                update_key_holder(element, new_keys)
            $.ajax
                type: "POST",
                url: url,
                dataType: "json"
                data:
                    sem_id: sem_id
                    new_keys: new_keys
                    
    if $('.tyrion').length > 0
        $('.seatButt').prop("disabled",true)
        currSeating = $('.tyrion').val().split(" ")
        currNeed = $('.jaime').val().split(" ")
        $('.tyrion').val(currSeating)
        $('.jaime').val(currNeed)
        
        $('.draggable-item').draggable
            stack: '.droppable-item'
            stack: '.draggable-item'
            start: (event, ui) ->
                if $(this).parent().attr("id") == "orphans"
                    orphanIndex = currNeed.indexOf($(this).attr("id"))
                    currNeed.splice(orphanIndex,1)
                    $('.jaime').val(currNeed)
                    
                else
                    seat = $(this).closest(".seat").attr("id")-1000;
                    currSeating[seat] = 0
                    $('.tyrion').val(currSeating)
                
                    
        $('.droppable-item').droppable
            over: (event, ui) ->
                $(this).addClass("my-placeholder")
            drop: (event, ui) ->
                $(this).removeClass("my-placeholder")
                if ($(this).children().length) > 0
                    oldStudent = $(this).children().first()
                    $("#dashOutline").hide()
                    oldStudent.detach().addClass("block").appendTo(".orphans")
                    currNeed.push(oldStudent.attr("id"))
                    $('.jaime').val(currNeed)
                justdragged = $(ui.draggable) 
                kid = justdragged.attr("id")
                seat = $(this).attr("id")-1000
                currSeating[seat] = kid
                $('.tyrion').val(currSeating)
                justdragged.removeClass("block")
                $(this).append(justdragged.removeAttr('style'))
                if ($('#orphans').children().size()) == 1
                    $("#dashOutline").show()
                $('.seatButt').prop("disabled",false)
            out: (event, ui) ->
                $(this).removeClass("my-placeholder")
            
                
        $('.supernaut').droppable
            drop: (event, ui) ->
                $("#dashOutline").hide()
                justdragged = $(ui.draggable)
                kid = justdragged.attr("id")
                currNeed.push(kid)
                $('.jaime').val(currNeed)
                justdragged.removeAttr('style').detach().addClass("block").appendTo(".orphans")
                $('.seatButt').prop("disabled",false)
    
    $('#toggle_text').on "click", ->
        if $('.to_unhide').hasClass("currently_hidden")
            $('.to_unhide').fadeIn()
            $('.to_unhide').removeClass("currently_hidden")
            $(this).text($(this).attr("first_text"))
        else
            $('.to_unhide').fadeOut()
            $('.to_unhide').addClass("currently_hidden")
            $(this).text($(this).attr("second_text"))
   
   
    if $('.clickySeat').length > 0
        $('.clickySeat').on "click", ->
            this_present_marking = $(this).find(".presentTag")
            seminar_student_id = $(this).attr('id').replace('attendance_div_','')
            url = '/seminar_students/'+seminar_student_id
            if this_present_marking.text() == "Absent"
                attendance = true
                $(this).removeClass("absent")
                this_present_marking.text("Present")
            else
                attendance = false
                $(this).addClass("absent")
                this_present_marking.text("Absent")
            $.ajax
                type: "PUT",
                url: url,
                dataType: "json"
                data:
                    seminar_student:
                        present: attendance
    
    if $('#scoreTable').length > 0
        $(".r0c0").focus()
        
        $('.score_cell').focus ->
            $('.score_box').removeClass('highlighted')
            $('.row_'+$(this).attr("cell_row")).addClass('highlighted')
            $('.col_'+$(this).attr("cell_col")).addClass('highlighted')
        
        $(".score_cell").keydown (e) ->
            cell_row = parseInt($(this).attr("cell_row"))
            cell_col = parseInt($(this).attr("cell_col"))
            
            if e.which == 38
                next_row = cell_row - 1
                next_col = cell_col
                
            else if e.which == 40
                next_row = cell_row + 1
                next_col = cell_col
                
            else if e.which == 37
                next_row = cell_row
                next_col = cell_col - 1
                
            else if e.which == 39
                next_row = cell_row
                next_col = cell_col + 1
            
            $(".r"+next_row+"c"+next_col).focus()
            callback = -> 
                $(".r"+next_row+"c"+next_col).select()
            setTimeout callback, 10
        
    
    if $('#dialog5').length > 0
        unpressed = true
        $("#dialog5").dialog
            autoOpen: false
            width: 520
            buttons : 
                Ok: ->
                    $(this).dialog("close")
                    
        $('.boulderfist').on "click", (event) ->
            if unpressed and $(this).prop("checked") == true
                $("#dialog5").dialog("open")
                
    if $('.select_box').length > 0
        $('.select_box').on "change", (event) ->
            points_poss = 0
            $(".left_box").each (index, element) =>
                a = $(element).val()
                partner_num = $(element).attr('partner')
                b = $("#syl_"+partner_num+"_point_value").val()
                points_poss += a * b
        
            $('#total_disp').text(points_poss)
    
    if $('.reveal').length > 0
        $('.reveal'). on "click", (event) ->
            submenu = $(this).attr("submenu")
            $('.reveal').removeClass('highlighted')
            $(this).addClass('highlighted')
            $('.submenu_item').hide()
            $('.submenu_'+submenu).show()
     
    if $('.remove_btn').length > 0
        $('.cancel_button').hide()
        $('.confirm_button').hide()
        $('.remove_btn').on "click", (event) ->
            id_to_fade = $(this).prop("id").replace('delete_','')
            $('#confirm_'+id_to_fade).text("Confirm")
            $('#confirm_'+id_to_fade).fadeIn()
            $('#cancel_'+id_to_fade).fadeIn()
            $(this).removeClass("btn btn-small btn-primary")
        $('.cancel_button').on "click", (event) ->
            id_to_fade = $(this).prop("id").replace('cancel_','')
            $('#confirm_'+id_to_fade).fadeOut()
            $(this).fadeOut()
            return false
    
    if $('.datepicker').length > 0
        $('.datepicker').on "click", (event) ->
            $(this).datepicker()
    
$(document).on('turbolinks:load', ready)
