<%= link_to "New File", new_worksheet_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @worksheets.each do |worksheet| %>
      <tr>
        <td><%= worksheet.name %></td>
        <td><%= link_to "Download File", worksheet.uploaded_file.to_s %></td>
        <td><%= button_to "Delete",  worksheet, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{worksheet.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>