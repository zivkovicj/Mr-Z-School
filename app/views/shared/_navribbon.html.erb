
<div>
    <h4>NOTE: Desk Consultants is currently in open BETA. Some errors are likely
    to occur. Please send problems, suggestions, or requests to zivkovic.jeff@gmail.com</h4>
</div>

<% if user_is_a_teacher %>
    <div class="ribbon">
        <table class="table-borderless">
            <tr>
                <td>Class</td>
                <td class="spacer"></td>
                <% current_user.own_seminars.order(:name).limit(8).each do |seminar| %>
                    
                    <td class="<%= 'highlighted' if (@seminar && @seminar==seminar) %>">
                        <h5>
                            <% if action_name == 'scoresheet' %>
                                <%= link_to seminar.limitedName, scoresheet_seminar_url(seminar), :id => "other_class_scoresheet_#{seminar.id}" %>
                            <% elsif action_name == 'edit' && controller_name == 'seminars' %>
                                <%= link_to seminar.limitedName, edit_seminar_path(seminar), :id => "other_class_edit_#{seminar.id}" %>
                            <% elsif controller_name == 'consultancies' %>
                                <%= link_to seminar.limitedName, consultancy_path(:id => Consultancy.first.id, :seminar => seminar.id), :id => "other_class_desk_consult_#{seminar.id}" %>
                            <% elsif controller_name == 'goal_students' %>
                                <%= link_to seminar.limitedName, goal_students_path(:seminar => seminar), :id => "other_class_student_goals_#{seminar.id}" %>
                            <% else %>
                                <%= link_to seminar.limitedName, seminar_path(seminar) %>
                            <% end %>
                            &nbsp;
                        </h5>
                    </td>
                <% end %>
            </tr>
        </table>
        
        <table class="table-borderless">
            <tr>
                <td><%= button_to "Your teacher page", current_user, 
                        class: "btn btn-lg btn-primary", :method => :get %></td>
                <td class="spacer"></td>
                
                <% if @seminar %>
                    <td class="<%= 'highlighted' if action_name == 'scoresheet' %>"><%= link_to image_tag("scoresheet.png"), scoresheet_seminar_url(@seminar), :id => "same_class_scoresheet_#{@seminar.id}" %></td>
                    <td class="<%= 'highlighted' if controller_name == "consultancies" %>">
                        <% if @seminar.shouldShowConsultLink %>
                            <%= link_to image_tag("desk_consult.png"), consultancy_path(:id => Consultancy.first, :seminar => @seminar), :id => "same_class_desk_consult_#{@seminar.id}" %>
                        <% end %>
                    </td>
                    <td class="<%= 'highlighted' if controller_name == 'goal_students' %>">
                        <%= link_to image_tag("apple.png"), goal_students_path(:seminar => @seminar), :id => "same_class_student_goals_#{@seminar.id}" %>
                    </td>
                    <td class="<%= 'highlighted' if controller_name == 'seminars' && action_name == 'edit' %>">
                        <%= link_to image_tag("E.png"), edit_seminar_path(@seminar), :id => "same_class_edit_#{@seminar.id}" %>
                    </td>
                <% end %>
            </tr>
            <tr>
                <td></td>
                <td></td>
                
                <% if @seminar %>
                    <td class="<%= 'highlighted' if action_name == 'scoresheet' %> center"><b>Scoresheet</b></td>
                    
                    <% if @seminar.shouldShowConsultLink %>
                        <td class="<%= 'highlighted' if controller_name == "consultancies" %> center">
                            <b>Desk Consultants</b>
                        </td>
                    <% else %>
                        <td></td>
                    <% end %>
                    <td class="<%= 'highlighted' if controller_name == 'goal_students' %> center"><b>Goals</b></td>
                    <td class="<%= 'highlighted' if controller_name == 'seminars' && action_name == 'edit' %> center"><b>Edit</b></td>
                <% end %>
            </tr>
        </table>
    </div>
<% end %>

<br/>
