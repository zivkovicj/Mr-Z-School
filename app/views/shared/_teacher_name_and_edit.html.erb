

<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h3>
                <%= gravatar_for user %>
                <strong><%= user.name_with_title %></strong>
                <% if current_user?(user) %>
                    &nbsp;
                    <small>
                        <span class="btn-group">
                            <%= button_to( "Edit", edit_polymorphic_path(current_user), :method => :get,
                                :class => "btn btn-small btn-primary", :id => "teacher_edit") %>
                        </span>
                    </small>
                <% end %>
            </h3>
        </section>
    </aside>
</div>