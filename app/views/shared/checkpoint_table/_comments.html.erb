
<% if @edit_type_for_comment == "Student" %>
    <% this_user = "student" %>
    <% other_user = "teacher" %>
    <% other_name = @seminar.teachers.first.name_with_title %>
<% else %>
    <% this_user = "teacher" %>
    <% other_user = "student" %>
    <% other_name = @checkpoint.goal_student.user.first_name %>
<% end %>

<% def me_label %>
    &emsp;<strong>Me</strong>&emsp;
<% end %>

<% if @edit_type_for_comment == "print" %>
    <% if @checkpoint.read_attribute("#{this_user}_comment") %>
        <% me_label %><%= @checkpoint.read_attribute("#{this_user}_comment") %>
        </br>
    <% end %>
<% else %>
    <% me_label %><%= best_in_place(@checkpoint, "#{this_user}_comment", :inner_class => "commentInput", :place_holder => "No comment yet") %>
    </br>
<% end %>

<% if @checkpoint.read_attribute("#{other_user}_comment") %>
    &emsp;<strong><%= other_name %></strong> &emsp; <%= @checkpoint.read_attribute("#{other_user}_comment") %>
<% end %>






 