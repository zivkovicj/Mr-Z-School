
<div class="row">
    <div class="col-sm-7 singleOption">
        <h1 class="chekkity"><%= @student.full_name %></h1>
        <h5><%= @seminar.name %></h5>
        <% @teachers.each do |teacher| %>
            <%= teacher.name_with_title %>
            &emsp;
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <%= render 'shared/big_link', link_link: star_market_seminar_student_path(@ss), 
            link_text: "Market", link_image: "market.png"  %>
    </div>
    
    <% if current_user.type == "Teacher" %>
        <div class="col-sm-4">
            <%= render 'shared/big_link', link_link: give_keys_seminar_student_path(@ss), 
                link_text: "Give Keys", link_image: "key.jpg"  %>
        </div>
        
        <div class="col-sm-4">
            <%= render 'shared/big_link', link_link: move_or_remove_seminar_student_path(@ss), 
                link_text: "Move or Remove", link_image: "student_move.png"  %>
        </div>
    <% else %>
        <div class="col-sm-4">
            <%= render 'shared/big_link', link_link: quizzes_seminar_student_path(@ss), 
                link_text: "Quizzes", link_image: "quiz.png"  %>
        </div>
    <% end %>
</div>

