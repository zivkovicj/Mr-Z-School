<% provide(:title, 'All Arrangements') %>

<% provide(:headerText, "All Arrangements") %>
<% provide(:headerPic, "sierpinski.png") %>

<%= render 'shared/back-link' %>
<%= render 'shared/headline' %>

<% if @consultancies.present? %>
    <table>
        <% @consultancies.each do |consultancy| %>
            <tr>
                <td><%= render 'shared/delete_and_confirm', object: consultancy %> </td>
                <%#= link_to "Accept", seminar_teacher_path(@st, :seminar_teacher => {:accepted => true}, :came_from_accepting_invites => true), 
                            :method => :put,  class: "btn btn-small btn-primary", :id => "accept_#{@st.id}" %>
                <td><%= link_to consultancy.display_date, consultancy_path(consultancy, :consultancy_id => consultancy.id), :id => "consultancy_#{consultancy.id}" %></td>
            </tr>
            </br>
        <% end %>
    </table>
<% else %>
    <%= no_consultancies_message %>
<% end %>

</br>

<h3>
    <%= new_consultancy_button_text %>: &emsp;
    <%= link_to image_tag("desk_consult.png"), new_consultancy_path(:seminar => @seminar.id), :id => "new_consultancy" %>
</h3>